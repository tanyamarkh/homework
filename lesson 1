// 2.Створення двох змінних з числовими значеннями
var a = 40;
                var b = 20;
                var result; 
                
                // Додавання (+)
                result = a + b; 
                document.write ("40 + 20 = " + result + "<br />");
                alert ("40 + 20 = " + result);

                // Віднімання (-)
                result = 40 - 20; 
                document.write ("40 - 20 = " + result + "<br />");
                alert ("40 - 20 = " + result);
        
                // Множення (*)
                result = 40 * 20;
                document.write ("40 * 20 = " + result + "<br />");
                alert ("40 * 20 = " + result);
        
                // Діленя
                result = a / b;
                document.write ("40 / 20 = " + result + "<br />");
                alert ("40 / 20 = " + result);


    
 // 3.Створення змінних з різними примітивними типами даних

    
 let num = 23;                  // Число
 document.write (typeof 23); 
        alert (typeof 2 );

        let str = "Hello, world!"; 
        document.write (typeof "Hello, world!" );    // Рядок
        alert (typeof "Hello, world!" );

        let bool = true;            // Булеве значення
        document.write (typeof true);
        alert (typeof true);

        let nullVar = null;            // Null
        document.write (typeof nullVar );  
        alert (typeof nullVar);


        let undef;                     // Undefined
        document.write (typeof undef );  
        alert (typeof undef);

      
        
        document.write (typeof str );
