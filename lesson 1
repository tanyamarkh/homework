      ///  5. Пріоритетність операторів


    
      let x = 6, y = 14, z = 4;

// 1
x += y - x++ * z;
// Послідовність: x++ * z -> y - результат -> x + результат

// 2
z = --x - y * 5;
// Послідовність: y * 5 -> --x -> результат - результат

// 3
y /= x + 5 % z;
// Послідовність: 5 % z -> x + результат -> y / результат

// 4
z = x++ + y * 5;
// Послідовність: y * 5 -> x++ -> результат + результат

// 5
x = y - x++ * z;
// Послідовність: x++ * z -> y - результат


        

        
        
